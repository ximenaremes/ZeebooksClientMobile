<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Restul conÈ›inutului fragmentului -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_bottom_sheet"
            app:behavior_hideable="false"
            app:behavior_peekHeight="50dp"
            app:behavior_skipCollapsed="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:id="@+id/bottomSheetTopIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/margin_14"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bottom_sheet_top_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/buttonAllUsers"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="@dimen/margin_40"
                android:scaleType="centerCrop"
                android:src="@drawable/background_button_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottomSheetTopIcon" />

            <ImageView
                android:id="@+id/iconAllUsers"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_12"
                android:src="@drawable/ic_all_users"
                app:layout_constraintStart_toStartOf="@+id/buttonAllUsers"
                app:layout_constraintTop_toTopOf="@+id/buttonAllUsers" />

            <TextView
                android:id="@+id/allUsersText"
                style="@style/FB.16.GrayscaleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_12"
                android:text="@string/dashboard_button_users"
                app:layout_constraintStart_toStartOf="@+id/buttonAllUsers"
                app:layout_constraintEnd_toEndOf="@+id/buttonAllUsers"
                app:layout_constraintBottom_toBottomOf="@+id/buttonAllUsers" />

            <ImageView
                android:id="@+id/buttonAllBooks"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="@dimen/margin_40"
                android:scaleType="centerCrop"
                android:src="@drawable/background_button_field"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottomSheetTopIcon" />

            <ImageView
                android:id="@+id/iconBooks"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_8"
                android:src="@drawable/ic_all_books"
                app:layout_constraintStart_toStartOf="@+id/buttonAllBooks"
                app:layout_constraintTop_toTopOf="@+id/buttonAllBooks" />

            <TextView
                android:id="@+id/bookText"
                style="@style/FB.16.GrayscaleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:text="@string/dashboard_button_books"
                app:layout_constraintStart_toStartOf="@+id/buttonAllBooks"
                app:layout_constraintEnd_toEndOf="@+id/buttonAllBooks"
                app:layout_constraintBottom_toBottomOf="@+id/buttonAllBooks" />


            <ImageView
                android:id="@+id/buttonCategories"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginStart="@dimen/margin_40"
                android:scaleType="centerCrop"
                android:src="@drawable/background_button_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonAllUsers" />

            <ImageView
                android:id="@+id/iconCategories"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginStart="@dimen/margin_8"
                android:src="@drawable/ic_all_categories"
                app:layout_constraintStart_toStartOf="@+id/buttonCategories"
                app:layout_constraintTop_toTopOf="@+id/buttonCategories" />

            <TextView
                android:id="@+id/categoriesText"
                style="@style/FB.16.GrayscaleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/dashboard_button_categories"
                app:layout_constraintStart_toStartOf="@+id/buttonCategories"
                app:layout_constraintEnd_toEndOf="@+id/buttonCategories"
                app:layout_constraintBottom_toBottomOf="@+id/buttonCategories" />


            <ImageView
                android:id="@+id/buttonCommand"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:scaleType="centerCrop"
                android:src="@drawable/background_button_field"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonAllBooks" />

            <ImageView
                android:id="@+id/iconCommand"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginStart="@dimen/margin_8"
                android:src="@drawable/ic_shopping"
                app:layout_constraintStart_toStartOf="@+id/buttonCommand"
                app:layout_constraintTop_toTopOf="@+id/buttonCommand" />

            <TextView
                android:id="@+id/commandText"
                style="@style/FB.16.GrayscaleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/dashboard_button_cart"
                app:layout_constraintStart_toStartOf="@+id/buttonCommand"
                app:layout_constraintEnd_toEndOf="@+id/buttonCommand"
                app:layout_constraintBottom_toBottomOf="@+id/buttonCommand" />

            <ImageView
                android:id="@+id/button"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:scaleType="centerCrop"
                android:src="@drawable/background_button_field"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonCommand" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

