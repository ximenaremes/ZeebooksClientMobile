<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/securitySectionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_24"
        android:background="@drawable/background_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/securitySectionTitleText"
        tools:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rounded_white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/securitySectionLayout">

            <ImageView
                android:id="@+id/usernameImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="@dimen/margin_21"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="@dimen/margin_21"
                android:text="@string/details_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_filter"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNameLayout">

            <ImageView
                android:id="@+id/passwordImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_24"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_8"
                android:text="@string/language"
                app:layout_goneMarginStart="@dimen/margin_8" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pinLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_email"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordLayout">

            <ImageView
                android:id="@+id/pinImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_24"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/pinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_8"
                android:text="@string/dark_mode_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/devicesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_profile"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinLayout">

            <ImageView
                android:id="@+id/devicesImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_24"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/devicesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_8"
                android:text="@string/about_us_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/biometricLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devicesLayout">

            <ImageView
                android:id="@+id/biometricImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_24"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/biometricText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginStart="@dimen/margin_8"
                android:text="@string/sign_out_text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_21"
                android:layout_marginEnd="@dimen/margin_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ToggleButton
                    android:id="@+id/biometricsToggleButton"
                    android:layout_width="@dimen/margin_48"
                    android:layout_height="@dimen/margin_24"
                    android:background="@drawable/ic_toggle_on"
                    android:textOff="@null"
                    android:textOn="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>